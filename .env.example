# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR (use INFO for production)

# OpenAI Configuration (Required)
OPENAI_API_KEY=your-openai-api-key-here

# Azure OpenAI Configuration (Optional - fill these to use Azure instead of api.openai.com)
AZURE_OPENAI_API_KEY=your-azure-openai-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_EMBEDDINGS_DEPLOYMENT=text-embedding-3-small

# LLM Model Configuration
LLM_MODEL=gpt-4o-mini  # Fallback model
LLM_MODEL_CHAT=gpt-4o-mini  # Fast model for conversation
LLM_MODEL_CHECKLIST=gpt-4o-mini  # High-quality model for checklist generation

# Embeddings Configuration
EMBEDDINGS_MODEL=text-embedding-3-small

# Tavily Search API (Required for checklist generation)
TAVILY_API_KEY=your-tavily-api-key-here

# Celery/Redis Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
